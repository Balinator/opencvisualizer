{
    "compileOnSave": true,
    "compilerOptions": {
        "experimentalDecorators": true,
        "declaration": true,
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "module": "AMD",
        "noImplicitAny": true,
        "outFile": "./js-dest/all.js",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "watch": true
    },
    "include": [
        "./js-src/**/*"
    ],
    "exclude": [
        "js-dest",
        "node_modules",
    ]
}